<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SGCS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- DarkMode -->
    <style name="nightModeSwitch" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!-- Privacy and Security -->
    <style name="privacyAndSecurity" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/security</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!-- Language -->
    <style name="language" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/language</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!-- Help -->
    <style name="help" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/help</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!-- SplashScreen -->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
    </style>
</resources>